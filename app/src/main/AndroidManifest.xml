<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wys.commonbaselib">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".MApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".activity.MediaRecorderActivity"
            android:configChanges="screenSize|keyboardHidden|orientation"
            android:screenOrientation="landscape"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".music.MusicDetailActivity" />
        <activity android:name=".music.MusicListActivity"></activity>

        <service
            android:name=".music.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".zxing.activity.CaptureActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.M3U8DownloadActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.VideoPlayerActivity" />
        <activity
            android:name=".activity.DownloadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".im.GslRecordPlayerActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.AVEditorActivity" />
        <activity android:name=".activity.RecyclerViewActivity" />
        <activity android:name=".activity.RequestActivity" />
        <activity android:name=".activity.PhotoListActivity"></activity>
        <activity
            android:name=".activity.BigPhotoActivity"
            android:theme="@style/TransparentTheme" />
        <activity android:name=".activity.VideoListActivity" />
    </application>

</manifest>