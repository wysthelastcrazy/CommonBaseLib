<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_base_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/ll_msg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_put_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="putMessage"/>
                <Button
                    android:id="@+id/btn_put_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="putMessages"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_trophy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_base_right"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>